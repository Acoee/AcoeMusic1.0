<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/main_bg_color">

    <include layout="@layout/title_bar_view" />

    <LinearLayout
        android:id="@+id/local_music_top_nav_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/title_height"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/local_music_nav_music_txt"
            style="@style/normal_text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/top_nav_selected_bg"
            android:textColor="@android:color/white"
            android:text="歌曲"/>

        <TextView
            android:id="@+id/local_music_nav_artist_txt"
            style="@style/normal_text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/top_nav_unselected_bg"
            android:textColor="@color/main_color"
            android:text="歌手"/>

        <TextView
            android:id="@+id/local_music_nav_album_txt"
            style="@style/normal_text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/top_nav_unselected_bg"
            android:textColor="@color/main_color"
            android:text="专辑"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/local_music_top_nav_ll">
    </FrameLayout>

</RelativeLayout>
