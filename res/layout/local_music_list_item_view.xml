<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/local_music_list_item_catalog_txt"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/main_bg_color"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:textColor="@color/normal_text_color"
        android:textSize="15dip"
        android:text="A"/>

    <ImageView
        android:id="@+id/local_music_list_item_line_img"
        style="@style/line_horizontal_style"
        android:layout_below="@+id/local_music_list_item_catalog_txt"
        android:contentDescription="@string/contentDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/local_music_list_item_title_txt"
            style="@style/normal_text_style"
            android:text="夜幕" />

        <TextView
            android:id="@+id/local_music_list_item_artist_txt"
            style="@style/normal_text_style_gray_small"
            android:layout_below="@+id/local_music_list_item_title_txt"
            android:layout_marginTop="4dp"
            android:text="夏树"/>

        <ImageView
            android:id="@+id/local_music_list_item_extend_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/extend_menu_button_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>