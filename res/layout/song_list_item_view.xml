<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/number_textview"
        style="@style/normal_text_style"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:text="1"/>

    <TextView
        android:id="@+id/title_textview"
        style="@style/normal_text_style"
        android:layout_toRightOf="@+id/number_textview"
        android:layout_toLeftOf="@+id/high_quality_imageview"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="30dip"
        android:text="歌曲名"/>

    <TextView
        android:id="@+id/artist_textview"
        style="@style/normal_text_style_gray_small"
        android:layout_alignLeft="@+id/title_textview"
        android:layout_below="@+id/title_textview"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="10dip"
        android:text="艺术家"/>

    <ImageView
        android:id="@+id/high_quality_imageview"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_toLeftOf="@+id/extend_checkbox"
        android:background="@drawable/high_quality_icon"
        android:layout_marginTop="20dip"/>

    <CheckBox
        android:id="@+id/extend_checkbox"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentRight="true"
        android:button="@null"
        android:background="@drawable/triangle_icon_style"/>

    <LinearLayout
        android:id="@+id/extend_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extend_checkbox"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/like_textview"
            style="@style/normal_text_style_white_mini"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:drawableTop="@drawable/song_like_icon"
            android:background="@drawable/black_button_style"
            android:gravity="center"
            android:text="喜欢"/>

        <TextView
            android:id="@+id/add_to_textview"
            style="@style/normal_text_style_white_mini"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:drawableTop="@drawable/song_add_to_icon"
            android:background="@drawable/black_button_style"
            android:gravity="center"
            android:text="添加到"/>

        <TextView
            android:id="@+id/download_textview"
            style="@style/normal_text_style_white_mini"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:drawableTop="@drawable/song_download_icon"
            android:background="@drawable/black_button_style"
            android:gravity="center"
            android:text="下载"/>

        <TextView
            android:id="@+id/add_to_queue_textview"
            style="@style/normal_text_style_white_mini"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:drawableTop="@drawable/song_add_to_queue"
            android:background="@drawable/black_button_style"
            android:gravity="center"
            android:text="加到队列"/>

        <TextView
            android:id="@+id/share_textview"
            style="@style/normal_text_style_white_mini"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:drawableTop="@drawable/song_share_to_icon"
            android:background="@drawable/black_button_style"
            android:gravity="center"
            android:text="分享"/>

    </LinearLayout>

</RelativeLayout>