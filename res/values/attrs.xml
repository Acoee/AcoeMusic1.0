<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义输入框（带删除按钮）样式 -->
    <declare-styleable name="MyEditView">
        <!-- 输入框背景色 -->
        <attr name="edtBg" format="reference|color" />
        <!-- 输入框字体大小 -->
        <attr name="edtTextSize" format="dimension" />
        <!-- 输入框字体颜色 -->
        <attr name="edtTextContentColor" format="reference|color" />
        <!-- 输入框Hint字体颜色 -->
        <attr name="edtTextHintColor" format="reference|color" />
        <!-- 标题内容 -->
        <attr name="edtTextContent" format="string" />
        <!-- 输入框内容 -->
        <attr name="edtTitle" format="string" />
        <!-- 输入框字Hint -->
        <attr name="edtTextHint" format="string" />
        <!-- 输入框是否可编辑 -->
        <attr name="edtEditable" format="boolean" />
        <!-- 输入框是否单行 -->
        <attr name="edtSingleLine" format="boolean" />
        <!-- 输入框输入类型 -->
        <attr name="edtInputType">
            <flag name="password" value="0x0" />
            <flag name="phone" value="0x1" />
            <flag name="number" value="0x2" />
            <flag name="numberDecimal" value="0x3" />
        </attr>
        <!-- 输入框字type类型 -->
        <attr name="edtType" format="string" />
    </declare-styleable>
    <!-- 圆形图片控件 -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>
    <!-- 圆形带进度播放器按钮控件 -->
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer"></attr>
        <attr name="artistTextColor" format="color"></attr>
        <attr name="artistTextSize" format="dimension"></attr>
        <attr name="musicTextColor" format="color"></attr>
        <attr name="musicTextSize" format="dimension"></attr>
        <attr name="playedTimeColor" format="color"></attr>
        <attr name="playedTimeSize" format="dimension"></attr>
    </declare-styleable>
    <!-- 自定义输入框（带删除按钮）样式 -->
    <declare-styleable name="SearchEditText">
        <!-- 删除按钮按下 -->
        <attr name="delPressedIcon" format="reference" />
        <!-- 删除按钮 -->
        <attr name="delNormalIcon" format="reference" />
        <!-- 搜索图标 -->
        <attr name="searchInIcon" format="reference" />
    </declare-styleable>
</resources>
