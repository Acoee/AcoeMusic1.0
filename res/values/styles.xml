<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 通用字体样式 -->
    <style name="normal_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="normal_text_style_gray" parent="@style/normal_text_style">
        <item name="android:textColor">@color/normal_gray_color</item>
    </style>
    <style name="normal_text_style_large" parent="@style/normal_text_style">
        <item name="android:textSize">@dimen/dimen_18</item>
    </style>
    <style name="normal_text_style_small" parent="@style/normal_text_style">
        <item name="android:textSize">@dimen/dimen_14</item>
    </style>
    <style name="normal_text_style_gray_small" parent="@style/normal_text_style_small">
        <item name="android:textColor">@color/normal_gray_color</item>
    </style>
    <style name="normal_text_style_blue_small" parent="@style/normal_text_style_small">
        <item name="android:textColor">@color/blue_color</item>
    </style>
    <style name="normal_text_style_white" parent="@style/normal_text_style">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="normal_text_style_white_small" parent="@style/normal_text_style_white">
        <item name="android:textSize">@dimen/dimen_14</item>
    </style>
    <style name="normal_text_style_white_mini" parent="@style/normal_text_style_white">
        <item name="android:textSize">@dimen/dimen_12</item>
    </style>
    <style name="title_text_style_main" parent="@style/normal_text_style">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <!-- 分割线样式 -->
    <style name="line_vertical_style">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <style name="line_horizontal_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <!-- 导航样式 -->
    <style name="nav_rl_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/dimen_4</item>
        <item name="android:layout_marginTop">@dimen/dimen_4</item>
    </style>
    <style name="nav_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/main_nav_text_color</item>
        <item name="android:textSize">@dimen/nav_text_size</item>
    </style>
    <style name="nav_icon_style">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:contentDescription">@string/contentDescription</item>
    </style>

    <!-- ScrollView样式 -->
    <style name="scroll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:overScrollMode">never</item>
    </style>
    <style name="listview_style" parent="@style/scroll_style">
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="pull_listview_style" parent="@style/listview_style">
        <item name="cn.com.acoe.app.music:ptrAnimationStyle">rotate</item>
        <item name="cn.com.acoe.app.music:ptrHeaderTextColor">@color/normal_text_color</item>
        <item name="cn.com.acoe.app.music:ptrMode">both</item>
        <item name="android:overScrollMode">always</item>
    </style>

    <!-- 按钮样式 -->
    <style name="parent_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_button_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
    </style>
    <style name="main_button_style" parent="@style/parent_button_style">
        <item name="android:background">@drawable/main_button_style</item>
    </style>
</resources>
